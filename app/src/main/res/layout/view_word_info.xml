<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_search_result_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가깝다"
            android:textColor="@android:color/primary_text_light"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/item_search_result_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_search_result_term"
            android:layout_marginBottom="8dp"
            android:text="Adjective"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/item_search_result_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_search_result_pos"
            android:orientation="vertical" />
    </RelativeLayout>

</merge>