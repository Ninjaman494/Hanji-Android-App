<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/item_search_result_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가깝다"
        android:textColor="@android:color/primary_text_light"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_search_result_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_search_result_term"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:text="Adjective"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_search_result_pos"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_search_result_def1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definition 1"
            android:textSize="16sp"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:id="@+id/item_search_result_def2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definition 2"
            android:textSize="16sp"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:id="@+id/item_search_result_def3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definition 3"
            android:textSize="16sp"
            android:textColor="@android:color/secondary_text_light"/>
    </LinearLayout>

</RelativeLayout>