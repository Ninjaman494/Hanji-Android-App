<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/frag_simplecard_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/verticalMargin"
    android:layout_marginLeft="@dimen/horizontalMargin"
    android:layout_marginRight="@dimen/horizontalMargin"
    android:layout_marginTop="@dimen/verticalMargin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/frag_simplecard_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/frag_simplecard_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/frag_simplecard_heading"
            android:layout_alignStart="@id/frag_simplecard_heading"
            android:layout_below="@id/frag_simplecard_heading"
            android:paddingBottom="20dp"
            android:text="Content"
            android:textAlignment="center"
            android:textSize="32sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>