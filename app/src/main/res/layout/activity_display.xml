<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a494studios.koreanconjugator.display.DisplayActivity">

    <ProgressBar
        android:id="@+id/disp_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <View
        android:id="@+id/disp_extendedBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="invisible"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:id="@+id/disp_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/disp_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_dcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_noteCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_conjCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_adCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_examplesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_synCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.a494studios.koreanconjugator.display.DisplayCardView
                    android:id="@+id/disp_antCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>