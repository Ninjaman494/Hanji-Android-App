<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/exCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/exCard_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="Examples"
                android:textColor="@color/colorPrimaryDark" />

            <com.linearlistview.LinearListView
                android:id="@+id/exCard_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exCard_heading"
                android:layout_alignStart="@id/exCard_heading"
                android:orientation="vertical"
                android:paddingBottom="10dp" />

            <Button
                android:id="@+id/exCard_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exCard_list"
                android:layout_alignParentEnd="true"
                android:text="See all" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>