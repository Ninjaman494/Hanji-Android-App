<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true">

    <TextView
        android:id="@+id/item_fav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/item_fav_honorific"
        android:paddingStart="@dimen/horizontalMargin"
        android:paddingEnd="@dimen/horizontalMargin"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Present"/>

    <TextView
        android:id="@+id/item_fav_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_fav_title"
        android:layout_toStartOf="@id/item_fav_honorific"
        android:paddingStart="@dimen/horizontalMargin"
        android:paddingEnd="@dimen/horizontalMargin"
        android:textSize="18sp"
        android:text="Declarative Present Informal High"/>

    <TextView
        android:id="@+id/item_fav_honorific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:text="@string/honorific"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/honorific_chip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_fav_subtitle"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>