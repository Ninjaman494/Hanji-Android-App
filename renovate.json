{
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "AndroidX Test Dependencies",
      "matchPackagePatterns": "androidx.test*"
    },
    {
      "groupName": "OkHttp Dependencies",
      "matchPackagePatterns": "com.squareup.okhttp3*"
    },
    {
      "groupName": "Apollo Dependencies",
      "matchPackagePatterns": "com.apollographql.apollo*"
    },
    {
      "groupName": "Maoni Dependencies",
      "matchPackagePatterns": "org.rm3l:maoni*"
    },
    {
      "groupName": "Non-Major Dependencies",
      "matchUpdateTypes": ["patch", "minor"]
    }
  ],
  "schedule": [
    "every weekend"
  ]
}
